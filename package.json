{
  "name": "@uplynk/lynk-design",
  "description": "A library of web components and styles for building web applications with the Edgio Streaming design language.",
  "version": "0.9.12",
  "homepage": "https://lynk.design/",
  "author": "Harley Jessop",
  "license": "MIT",
  "main": "dist/lynk.js",
  "module": "dist/lynk.js",
  "customElements": "dist/custom-elements.json",
  "web-types": "dist/web-types.json",
  "type": "module",
  "types": "dist/lynk.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lynk.d.ts",
      "import": "./dist/lynk.js"
    },
    "./dist/custom-elements.json": "./dist/custom-elements.json",
    "./dist/themes/*": "./dist/themes/*",
    "./dist/components/*": "./dist/components/*",
    "./dist/utilities/*": "./dist/utilities/*",
    "./dist/translations/*": "./dist/translations/*"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "web components",
    "custom elements",
    "components"
  ],
  "scripts": {
    "start": "node scripts/build.js --bundle --serve",
    "build": "node scripts/build.js --bundle --types --copydir \"docs/dist\"",
    "verify": "npm run prettier:check && npm run lint && npm run build && npm run test",
    "prepublishOnly": "npm run verify",
    "prettier": "prettier --write --loglevel warn .",
    "prettier:check": "prettier --check --loglevel warn .",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --max-warnings 0 --fix",
    "ts-check": "tsc --noEmit --project ./tsconfig.json",
    "create": "plop --plopfile scripts/plop/plopfile.js",
    "test": "web-test-runner --group default",
    "test:component": "web-test-runner -- --watch --group",
    "test:watch": "web-test-runner --watch --group default",
    "spellcheck": "cspell \"**/*.{js,ts,json,html,css,md}\" --no-progress",
    "list-outdated-dependencies": "npm-check-updates --format repo --peer",
    "update-dependencies": "npm-check-updates --peer -u && yarn install"
  },
  "engines": {
    "node": ">=14.18.0"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.4.2",
    "@shoelace-style/animations": "^1.1.0",
    "@shoelace-style/localize": "^3.0.4",
    "lit": "^2.7.5"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.6.9",
    "@open-wc/testing": "^3.1.7",
    "@types/color": "^3.0.3",
    "@types/mocha": "^10.0.1",
    "@types/react": "^18.0.28",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "@web/dev-server-esbuild": "^0.3.6",
    "@web/test-runner": "^0.15.0",
    "@web/test-runner-commands": "^0.6.5",
    "@web/test-runner-playwright": "^0.9.0",
    "bootstrap-icons": "^1.11.0",
    "browser-sync": "^2.27.11",
    "cem-plugin-vs-code-custom-data-generator": "^1.4.1",
    "chalk": "^5.2.0",
    "command-line-args": "^5.2.1",
    "comment-parser": "^1.3.1",
    "cspell": "^6.26.3",
    "del": "^7.0.0",
    "download": "^8.0.0",
    "esbuild": "^0.16.17",
    "eslint": "^8.43.0",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-lit": "^1.8.3",
    "eslint-plugin-lit-a11y": "^2.4.1",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-wc": "^1.5.0",
    "front-matter": "^4.0.2",
    "get-port": "^6.1.2",
    "globby": "^13.1.3",
    "husky": "^8.0.3",
    "jsonata": "^2.0.3",
    "lint-staged": "^13.2.2",
    "lunr": "^2.3.9",
    "npm-check-updates": "^16.7.5",
    "open": "^8.4.2",
    "pascal-case": "^3.1.2",
    "plop": "^3.1.2",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "recursive-copy": "^2.0.14",
    "sinon": "^15.0.1",
    "source-map": "^0.7.4",
    "strip-css-comments": "^5.0.0",
    "tslib": "^2.5.3",
    "typescript": "4.9.5",
    "user-agent-data-types": "^0.3.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --max-warnings 0 --cache --fix",
      "prettier --write"
    ]
  }
}
